# 🗃️ Base de Datos (Obligatorio)
DATABASE_URL="postgresql://user:password@host:port/database"

# 🔐 Autenticación Replit (Obligatorio para login)
SESSION_SECRET="your-super-secret-session-key-here-minimum-32-characters"
REPL_ID="your-replit-app-id"
REPLIT_DOMAINS="your-replit-domain.replit.app"

# 🤖 APIs Externas (Opcional pero recomendado)
OPENAI_API_KEY="sk-your-openai-key-for-advanced-analysis"
POKEMON_TCG_API_KEY="your-pokemon-tcg-api-key"

# 📧 Email Service (Opcional - para reportes de disputas)
SENDGRID_API_KEY="your-sendgrid-key-for-email-notifications"

# 🔧 Variables de entorno adicionales (automáticas en Replit)
PGHOST="auto-generated-in-replit"
PGPORT="auto-generated-in-replit"
PGUSER="auto-generated-in-replit"
PGPASSWORD="auto-generated-in-replit"
PGDATABASE="auto-generated-in-replit"

# 📝 Notas:
# - DATABASE_URL y SESSION_SECRET son obligatorios
# - REPL_ID y REPLIT_DOMAINS son necesarios para autenticación
# - Las demás variables mejoran la funcionalidad pero son opcionales
# - Las variables PG* se configuran automáticamente en Replit